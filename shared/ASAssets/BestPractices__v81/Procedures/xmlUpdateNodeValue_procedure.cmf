PROCEDURE xmlUpdateNodeValue(
	IN tagName			VARCHAR,
	IN updateValue		LONGVARCHAR,
	IN inXMLDoc			LONGVARCHAR,
	OUT outXMLDoc		LONGVARCHAR
)
BEGIN
	DECLARE tagNameBeg		VARCHAR;
	DECLARE tagNameEnd		VARCHAR;
	DECLARE tagNameNull		VARCHAR;
	DECLARE pos1, pos2, len	INTEGER;
	DECLARE modifiedNode	LONGVARCHAR;

	SET outXMLDoc = inXMLDoc;
	SET tagNameBeg = &apos;&lt;&apos;||tagName||&apos;&gt;&apos;;
	SET tagNameEnd = &apos;&lt;/&apos;||tagName||&apos;&gt;&apos;;
	SET tagNameNull = &apos;&lt;&apos;||tagName||&apos;/&gt;&apos;;
	
	SET pos1 = INSTR(inXMLDoc, tagNameBeg);
	SET pos2 = INSTR(inXMLDoc, tagNameEnd);
	IF (pos1 = 0 AND pos2 = 0) THEN
		SET pos1 = INSTR(inXMLDoc, tagNameNull);
		SET len = LENGTH(tagNameNull);
		IF (pos1 &gt; 0) THEN
			IF (updateValue IS NULL) THEN
				SET outXMLDoc = SUBSTRING(inXMLDoc, 1, pos1-1) || tagNameNull || SUBSTRING(inXMLDoc, pos1+len);
			ELSE
				SET outXMLDoc = SUBSTRING(inXMLDoc, 1, pos1-1) || tagNameBeg || updateValue || tagNameEnd || SUBSTRING(inXMLDoc, pos1+len);
			END IF;
		END IF;
	ELSE
		SET len = LENGTH(tagNameEnd);
		IF (updateValue IS NULL) THEN
			SET outXMLDoc = SUBSTRING(inXMLDoc, 1, pos1-1) || tagNameNull || SUBSTRING(inXMLDoc, pos2+len);
		ELSE
			SET outXMLDoc = SUBSTRING(inXMLDoc, 1, pos1-1) || tagNameBeg || updateValue || tagNameEnd || SUBSTRING(inXMLDoc, pos2+len);
		END IF;
	END IF;
END</attribute>
